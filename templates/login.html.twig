{% extends 'base.html.twig' %}

{% block body %}

<h1>Login</h1>

{% if error %}
    <div>{{ error.messageKey }}</div>
{% endif %}

<form id="login" action="{{ path('login') }}" method="post">
    <div>
        <input type="text" id="username" name="_username" placeholder="User Name"/><br/>
    </div>
    <div>
        <input type="password" id="password" name="_password" placeholder="User Password" /><br/>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Recordarme</label>
    </div>
    <button type="submit">Entrar</button>
</form>
{% endblock %}